package p2;

import java.util.List;

public class School extends Thread {
	
	
	private String studentCategory;
	private List<Student>studentList;
	private int count;
	
	
	public School(String studentCategory, List<Student> studentList, int count) {
		super();
		this.studentCategory = studentCategory;
		this.studentList = studentList;
		this.count = count;
	}


	public String getStudentCategory() {
		return studentCategory;
	}

	public void setStudentCategory(String studentCategory) {
		this.studentCategory = studentCategory;
	}

	public List<Student> getStudentList() {
		return studentList;
	}

	public void setStudentList(List<Student> studentList) {
		this.studentList = studentList;
	}

	public int getCount() {
		return count;
	}

	public void setCount(int count) {
		this.count = count;
	}
	
	public void run()	{
	    //Fill the code
		int countOfStudents = 0;
		for(Student student:studentList) {
			if(student.getStudentCategory() == this.studentCategory) {
				countOfStudents += 1;
			}
		}
		this.count = countOfStudents;
		System.out.println(this.studentCategory + " : " + this.count);
	}

		
}
